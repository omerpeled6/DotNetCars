@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - backend</title>
    <link rel="stylesheet" href="~/css/layout.css" />
</head>
<body>
    <header>
        <nav class="navbar">
            <a class="navbar-brand" asp-area="" asp-page="/Index">Ido Peled</a>

            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Index">Home</a>
                </li>

                @if (Context.Session.GetString("Username") == null)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Users/Register">Sign Up</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Users/Login">Login</a>
                    </li>
                }
                else
                {
                   
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Users/BMW">BMW</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Users/Bugatti">Bugatti</a>
                    </li>

                      <li class="nav-item">
                        <a class="nav-link" asp-page="/Users/Ferrari">Ferrari</a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Users/Lamborghini">Lamborghini</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Users/Mercedes">Mercedes</a>
                    </li>
                   
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Users/UsersList">Users List</a>
                    </li>

                       <li class="nav-item">
                        <a class="nav-link" asp-page="/Users/Logout">Logout</a>
                    </li>
                }
            </ul>

            <div class="text-muted">
                @if (Context.Session.GetString("Username") != null)
                {
                    <span>Welcome, <b>@Context.Session.GetString("Username")</b></span>
                }
                else
                {
                    <span>Welcome, Guest</span>
                }
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>