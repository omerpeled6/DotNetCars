@page
@model backend.Pages.Users.RegisterModel
@{
    ViewData["Title"] = "Register";
}

@section Scripts {
    <link rel="stylesheet" href="~/css/register.css" />
    <script src="~/js/register.js"></script>
}

<div class="containerAll">
  <div class="form-card">
    <h2>Signup</h2>

    <div class="form-group">
        <label>Username</label>
        <input id="username" oninput="clearError('usernameError')" />
        <span id="usernameError" class="error-message"></span>
    </div>

    <div class="form-group">
        <label>Password</label>
        <input id="password" type="password" oninput="clearError('passwordError')" />
        <span id="passwordError" class="error-message"></span>
    </div>

    <div class="form-group">
        <label>First Name</label>
        <input id="firstName" oninput="clearError('firstNameError')" />
        <span id="firstNameError" class="error-message"></span>
    </div>

    <div class="form-group">
        <label>Last Name</label>
        <input id="lastName" oninput="clearError('lastNameError')" />
        <span id="lastNameError" class="error-message"></span>
    </div>

    <div class="form-group">
        <label>Email</label>
        <input id="email" type="email" oninput="clearError('emailError')" />
        <span id="emailError" class="error-message"></span>
    </div>

    <div class="form-group">
        <label>Phone</label>
        <input id="phone" oninput="clearError('phoneError')" />
        <span id="phoneError" class="error-message"></span>
    </div>

    <div class="form-group">
        <label>Birth Date</label>
        <input id="birthDate" type="date" oninput="clearError('birthDateError')" />
        <span id="birthDateError" class="error-message"></span>
    </div>

    <div class="form-group">
        <label>Gender</label>
        <div class="radio-group">
            <label><input type="radio" name="gender" value="Male" /> Male</label>
            <label><input type="radio" name="gender" value="Female" /> Female</label>
        </div>
        <span id="genderError" class="error-message"></span>
    </div>

    <div class="form-group">
        <label>Favorite Car</label>
        <select id="favoriteCar" onchange="clearError('favoriteCarError')">
            <option value="">Select Favorite Car</option>
            <option>Tesla</option>
            <option>BMW</option>
            <option>Toyota</option>
            <option>Mazda</option>
            <option>Honda</option>
            <option>Mercedes</option>
        </select>
        <span id="favoriteCarError" class="error-message"></span>
    </div>

    <button onclick="submitRegister()">Register</button>
  </div>
</div>