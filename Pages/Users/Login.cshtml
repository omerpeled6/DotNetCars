@page
@model backend.Pages.Users.LoginModel
@{
    ViewData["Title"] = "Login";
}

@section Scripts {
    <link rel="stylesheet" href="~/css/login.css" />
    <script src="~/js/login.js"></script>
}
<div class="containerAll">
  <div class="form-card">
    <h2>Login</h2>

  <div class="form-group">
    <label>Username</label>
    <input id="username" type="text" placeholder="Username" oninput="clearError('usernameError')" />
    <span id="usernameError" class="error-message"></span>
</div>

<div class="form-group">
    <label>Password</label>
    <input id="password" type="password" placeholder="Password" oninput="clearError('passwordError')" />
    <span id="passwordError" class="error-message"></span>
</div>

    <button onclick="loginUser()">Login</button>
  </div>
</div>